<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Sonorize.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="40"
             x:Class="Sonorize.Controls.SearchBarControl"
             x:DataType="vm:MainWindowViewModel">
	<!-- DataContext will be MainWindowViewModel -->
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<UserControl.Styles>
		<!-- Inherit/Define specific styles needed within this control -->
		<Style Selector="TextBox:focus">
			<Setter Property="BorderBrush" Value="{Binding CurrentTheme.B_AccentColor}"/>
		</Style>
	</UserControl.Styles>

	<Panel Margin="0,5,0,0">
		<TextBox Watermark="Search songs by title, artist, or album..."
                 Margin="10,5,10,5"
                 Padding="10,7"
                 Background="{Binding CurrentTheme.B_SlightlyLighterBackground}"
                 Foreground="{Binding CurrentTheme.B_TextColor}"
                 BorderBrush="{Binding CurrentTheme.B_ControlBackgroundColor}"
                 BorderThickness="1"
                 CornerRadius="4"
                 FontSize="14"
                 Text="{Binding SearchQuery, Mode=TwoWay}"/>
	</Panel>
</UserControl>