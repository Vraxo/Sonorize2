<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Sonorize.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="26"
             x:Class="Sonorize.Controls.StatusBarControl"
             x:DataType="vm:MainWindowViewModel">
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<!-- No local styles or resources needed for this simple control -->
	<!-- UserControl.Styles> ... </UserControl.Styles -->
	<!-- UserControl.Resources> ... </UserControl.Resources -->

	<Border Background="{Binding CurrentTheme.B_SlightlyLighterBackground}" Padding="10,4" Height="26">
		<TextBlock Text="{Binding StatusBarText}" Foreground="{Binding CurrentTheme.B_SecondaryTextColor}" VerticalAlignment="Center" FontSize="11"/>
	</Border>
</UserControl>